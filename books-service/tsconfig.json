{
  "compilerOptions": {
    "preserveConstEnums": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "target": "es5",
    "outDir": ".build",
    "moduleResolution": "node",
    "lib": ["es2015"],
    "rootDir": "./",
    "skipLibCheck": true
  },
  "exclude": [
    "*.graphql",
    "node_modules",
    "appsync.graphql",
    "serverless.yml",
    ".build",
    ".serverless"
  ]
}
